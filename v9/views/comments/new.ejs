<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">Tilføj ny kommentar til <%= shelter.name %></h1>
		<div style="width: 30%; margin: 20px auto;">
			<form action="/shelters/<%= shelter._id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="Kommentar">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Tilføj</button>
				</div>
			</form>
			<a href="/shelters">Tilbage</a>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>