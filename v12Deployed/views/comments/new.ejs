<%- include("../partials/header") %>

	<div class="row justify-content-center">
		<div class="col-md-12 text-center">
		<h1>Tilføj ny kommentar til <%= shelter.name %></h1>
		</div>
		<div class="col-xs-12 col-md-6 col-lg-4">
			<form action="/shelters/<%=shelter._id %>/comments" method="POST">
				<div class="form-group">
					<textarea class="form-control" name="comment[text]" cols="40" rows="5" placeholder="Kommentar"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Tilføj</button>
				</div>
			</form>
			<a href="/shelters">Tilbage</a>
		</div>
	</div>


<%- include("../partials/footer") %>