<%- include("../partials/header") %>

	 <header class="jumbotron">
		 <div class="container">
			<h1>Velkommen til Shelter databasen!</h1>
			<p>Her kan du se en masse sheltere i Danmark og tilføje nye til listen!</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/shelters/new">Tilføj nyt shelter</a>
			</p> 
		 </div>	
	</header>


	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% shelters.forEach(function(shelter){ %>
			<div class=" col-lg-3 col-md-4 col-sm-6 mb-4">	
				<div class="card">
					<img src="<%= shelter.image %>" class="card-img-top" alt="<%= shelter.name %>">
					<div class="card-body">
						<h5 class="card-title"><%= shelter.name %></h5>
						<a href="/shelters/<%= shelter._id %>" class="btn btn-primary">Mere information</a>
					</div>
				</div>
			</div>
		<% }); %>
	</div>


<%- include("../partials/footer") %>